FROM registry.redhat.io/rhel9/rhel-bootc:latest@sha256:850d33e80b19a6ffae0585c2be4ff1258c11c939cbbfe6f007115702f0ec3676

USER root

RUN rm -f /etc/rhsm-host

COPY ./bootc/rhel9/etc /etc/
RUN ls -l /etc/yum.repos.d/ && cat /etc/yum.repos.d/redhat.repo
RUN <<EOF
  systemctl disable kdump
  dnf install -y \
    --disableplugin=subscription-manager \
    --setopt=basearch=$(uname -m) \
    rhc dnf-plugins-core vim zsh tmux systemd-resolved tuned
  dnf clean all
  systemctl enable systemd-resolved.service
EOF
