FROM registry.redhat.io/rhel10/rhel-bootc:latest@sha256:126a3e298e8d45dec19c3b7b68f65afe56f64a964fea113d55c9b39ebd734c62

COPY ./bootc/rhel10/etc /etc/
RUN systemctl disable kdump
RUN dnf -y install rhc dnf-plugins-core vim zsh tmux cockpit cockpit-podman tuned
RUN dnf clean all
RUN systemctl enable cockpit.socket
